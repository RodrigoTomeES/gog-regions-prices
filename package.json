{
  "name": "gog-regions-prices",
  "version": "2.0.0",
  "description": "Compare GOG's prices between all regions (in dollars)",
  "author": "Rodrigo Tom√© Nieto <hi@rodrigotome.es>",
  "scripts": {
    "watch:tailwind": "postcss public/tailwind.css -o public/index.css -w",
    "build:tailwind": "NODE_ENV=production postcss public/tailwind.css -o public/index.css",
    "dev": "run-p start:dev autobuild watch:tailwind",
    "build": "npm run build:tailwind && rollup -c",
    "start": "sirv public --single",
    "start:dev": "sirv public --single --dev --port 8888",
    "autobuild": "rollup -c -w",
    "extract": "node ./src/extract.js",
    "deploy": "npm run build && gh-pages -d public"
  },
  "license": "AGPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RodrigoTomeES/gog-regions-prices.git"
  },
  "dependencies": {},
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.3.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "autoprefixer": "^10.4.7",
    "cssnano": "^4.1.10",
    "gh-pages": "^3.2.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.13",
    "postcss-cli": "^8.3.1",
    "purgecss-from-svelte": "^2.0.2",
    "request": "^2.88.2",
    "rollup": "^2.71.1",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sirv-cli": "^1.0.0",
    "svelte": "^3.48.0",
    "svelte-preprocess": "^4.10.6",
    "tailwindcss": "^2.0.2"
  },
  "optionalDependencies": {
    "win-node-env": "^0.4.0"
  }
}
